{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customDatasources": {
    "apt.debian": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/apt-repositories/debian/main/apt/debian/{{release}}/main/{{depName}}.json",
      "transformTemplates": [
        "{ \"releases\": [$map($, function($v){ { \"version\": $v.version } })], \"homepage\": $[0].homepage }"
      ]
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _VERSION variables in Dockerfiles for datasources",
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$",
        "(^|/)versions.env$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s(?:ENV|ARG) .+?_VERSION=(?<currentValue>.+?)\\s"
      ]
    },
    {
      "customType": "regex",
      "description": "Update _VERSION variables in Dockerfiles for debian packages only",
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$",
        "(^|/)versions.env$"
      ],
      "datasourceTemplate": "custom.apt.debian",
      "matchStrings": [
        "#\\s*renovate:\\s*?(release=(?<release>.*?))?\\s*depName=(?<depName>.*?)?\\sENV .*?_VERSION=\"(?<currentValue>.*)\""
      ]
    }
  ],
  "enabledManagers": [
    "dockerfile",
    "custom.regex"
  ],
  "groupName": "all dependencies",
  "groupSlug": "all"
}
