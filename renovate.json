{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _VERSION variables in Dockerfiles for debian packages only",
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$",
        "(^|/)versions.env$"
      ],
      "registryUrlTemplate": "https://deb.debian.org/debian?{{#if release }}release={{release}}{{else}}suite=stable{{/if}}&components=main,contrib,non-free&binaryArch=amd64",
      "datasourceTemplate": "deb",
      "matchStrings": [
        "# renovate: release=(?<release>.*?) depName=(?<depName>.*?)?\\s(?:ENV|ARG) .+?_VERSION=\"(?<currentValue>.*)\""
      ]
    }
  ],
  "enabledManagers": [
    "dockerfile",
    "custom.regex"
  ],
  "groupName": "all dependencies",
  "groupSlug": "all"
}
